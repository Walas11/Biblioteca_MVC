@model LibreriaMVC.Models.Contracts.Autores.AutoresContract

<h2>Crear Nuevo Autor</h2>

<form asp-action="AutoresCreate">
    <div class="form-group">
        <label for="Nombre_autor">Codigo Autor:</label>
        <input type="text" class="form-control" id="Codigo_autor" name="Codigo_autor" required />
    </div>
    <div class="form-group">
        <label for="Nombre_autor">Nombre:</label>
        <input type="text" class="form-control" id="Nombre_autor" name="Nombre_autor" required />
    </div>
    <div class="form-group">
        <label for="Nacionalidad">Nacionalidad:</label>
        <input type="text" class="form-control" id="Nacionalidad" name="Nacionalidad" required />
    </div>
    <button type="submit" class="btn btn-primary">Crear Autor</button>
</form>